<div class="card bg-dark">
  <img src="{{img}}" class="card-img-top custom-card-img m-1 img-thumbnail" />
  <div class="card-body bg-light">
    <h5 class="card-title">{{title}}</h5>
    <hr />
    <div class="row">
      {{#each detail.times as |item|}}
      <div class="col-4">
        {{item}}
      </div>
      {{/each}}
    </div>
    <hr />
    <div class="row">
      <div class="col-12 text-center m-2">
        <h3>Ingredients</h3>
      </div>
      <div class="col-2"></div>
      <div class="col-8">
        <ul>
          {{#each detail.ingredients as |ingr|}}
          <li>{{ingr}}</li>
          {{/each}}
        </ul>
      </div>
      <div class="col-2"></div>
    </div>
    <hr />
    <div class="row">
      <div class="col-12 text-center m-2">
        <h3>Instructions</h3>
      </div>
      <div class="col-2"></div>
      <div class="col-8">
        <ol>
          {{#each detail.steps as |step|}}
          <li>{{step}}</li>
          {{/each}}
        </ol>
      </div>
      <div class="col-2"></div>
    </div>
    <hr />
    <div class="row">
      <div class="col-12 text-center m-2">
        <h3>Notes</h3>
      </div>
      <div class="col-1"></div>
      <div class="col-10">
        {{#each note as |item|}}
        <div class="row mb-2 align-items-center" id="note-{{item._id}}">
          <div class="col-10">
            {{item.body}}
          </div>
          <div class="col-2">
            <button type="button" class="btn btn-sm btn-outline-danger delete-note" data-id="{{item._id}}"
              data-recipe="{{_id}}">x</button>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="col-1"></div>
    </div>
    <div class="card-footer">
      <a href="#" class="btn btn-primary add-note">Add Note</a>
    </div>
  </div>
</div>